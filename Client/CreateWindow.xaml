<Window x:Class="Client.CreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Создать папку" Height="170" Width="350">
    <StackPanel>
        <TextBlock Margin="10 10 10 5">Название папки:</TextBlock>
        <TextBox Margin="10 5 10 10" Text="{Binding FolderName}"></TextBox>

        <Button Click="Button_Create" Margin="10">Создать</Button>
    </StackPanel>
</Window>
