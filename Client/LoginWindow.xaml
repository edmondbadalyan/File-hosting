<Window x:Class="Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="LoginWindow" Height="300" Width="350">
    <Grid>
        <StackPanel>
            <TextBlock Margin="10">Email:</TextBlock>
            <TextBox Margin="10" Text="{Binding Email}"></TextBox>
            
            <TextBlock Margin="10">Password:</TextBlock>
            <PasswordBox Margin="10"></PasswordBox>
            
            <Button Click="Button_Login" Margin="10">Send</Button>

            <TextBlock Margin="10">
                <Hyperlink Click="Button_ForgotPassword">Forgot password?</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
