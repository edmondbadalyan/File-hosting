<Window x:Class="Client.PasswordChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="Сменить пароль" Height="300" Width="350">
    <StackPanel>
        <TextBlock Margin="10">Новый пароль:</TextBlock>
        <PasswordBox Margin="10" PasswordChar="*"
                 PasswordChanged="PasswordChanged"></PasswordBox>

        <TextBlock Margin="10">Повторно введите пароль:</TextBlock>
        <PasswordBox Margin="10" PasswordChar="*"
                 PasswordChanged="PasswordCopyChanged"></PasswordBox>        

        <Button Click="Button_Send" Margin="10">Подтвердить</Button>
    </StackPanel>
</Window>
