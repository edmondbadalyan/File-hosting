<Window x:Class="Client.MoveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Сменить пароль" Height="200" Width="350">
    <StackPanel>
        <TextBlock Margin="10">Новый пароль:</TextBlock>
        <ComboBox ItemsSource="{Binding AllPaths}"
                  Margin="10 30" Text="{Binding Path}"></ComboBox>

        <Button Click="Button_Send" Margin="10">Подтвердить</Button>
    </StackPanel>
</Window>
